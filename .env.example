# PSA Platform Environment Configuration
# Copy this file to .env and update the values

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/psa

# Server
HOST=0.0.0.0
PORT=8080
ENVIRONMENT=development
BASE_URL=http://localhost:8080

# Security
JWT_SECRET=change-this-to-a-secure-random-string-in-production
ENCRYPTION_KEY=32-byte-key-for-dev-only-change!

# Database migrations
RUN_MIGRATIONS=true

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=noreply@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=PSA Platform <noreply@example.com>

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Tactical RMM Integration
TACTICAL_RMM_URL=https://your-tactical-rmm.example.com
TACTICAL_RMM_API_KEY=your-api-key

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Slack Integration
SLACK_BOT_TOKEN=xoxb-...
SLACK_SIGNING_SECRET=...

# Microsoft Teams Integration
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/...

# Logging
RUST_LOG=info,psa_platform=debug
