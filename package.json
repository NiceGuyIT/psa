{
  "name": "psa-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -i ./input.css -o ./assets/styles.css --minify",
    "watch:css": "tailwindcss -i ./input.css -o ./assets/styles.css --watch",
    "dev": "concurrently \"Tail\" \"dx serve\"",
    "build": "bun run build:css && dx build --release"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "concurrently": "^8.2.2",
    "tailwindcss": "^4.0.0"
  }
}
